@model Unimed.Agendamentos.UI.ViewModels.AgendamentoViewModel

@{
    ViewData["Title"] = "Deletar Agendamento";
}
<h3>@ViewData["Title"]</h3>

<h6>Você tem certeza que deseja deletar esse agendamento?</h6>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Paciente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Paciente.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Medico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Medico.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InicioAtendimento)
        </dt>
        <dd class="col-sm-10">
            @Model.FimAtendimento.ToString("dd/MM/yyyy hh:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FimAtendimento)
        </dt>
        <dd class="col-sm-10">
            @Model.FimAtendimento.ToString("dd/MM/yyyy hh:mm")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Observacao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Observacao)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a asp-action="Index" class="btn btn-info">Voltar</a>
        <input type="submit" value="Deletar" class="btn btn-danger" /> 
    </form>
</div>
