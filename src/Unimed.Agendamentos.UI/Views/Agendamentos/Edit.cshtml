@model Unimed.Agendamentos.UI.ViewModels.AgendamentoViewModel

@{
    ViewData["Title"] = "Editar Agendamento";
}

<h4>@ViewData["Title"]</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">

            <vc:Summary></vc:Summary>

            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="MedicoId" class="control-label"></label>
                <input asp-for="@Model.Medico.Nome" class="form-control" disabled></input>
                <span asp-validation-for="@Model.Medico.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PacienteId" class="control-label"></label>
                <input asp-for="@Model.Paciente.Nome" class="form-control" disabled"></input>
                <span asp-validation-for="@Model.Paciente.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="InicioAtendimento" class="control-label"></label>
                <input asp-for="InicioAtendimento" class="form-control" />
                <span asp-validation-for="InicioAtendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FimAtendimento" class="control-label"></label>
                <input asp-for="FimAtendimento" class="form-control" />
                <span asp-validation-for="FimAtendimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Observacao" class="control-label"></label>
                <textarea cols="40" rows="2" asp-for="Observacao" class="form-control"></textarea>
                <span asp-validation-for="Observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a class="btn btn-info" href="javascript:window.history.back();">Voltar</a>
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
