@model IEnumerable<Unimed.Agendamentos.UI.ViewModels.AgendamentoViewModel>

<p>
    <a asp-action="Create" class="btn btn-info btn-sm"><strong>Novo Agendamento</strong>&nbsp;<span class="fa fa-plus"></span></a>
</p>
<table class="table table-hover">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Paciente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Medico)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InicioAtendimento)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.FimAtendimento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observacao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Paciente.DataNascimento)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Paciente.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Medico.Nome)
                </td>
                <td>
                    @item.InicioAtendimento.ToString("dd/MM/yyyy HH:mm")
                </td>
                <td>
                    @item.FimAtendimento.ToString("dd/MM/yyyy HH:mm")

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observacao)
                </td>
                <td class="pl-5">
                    @item.Paciente.DataNascimento.ToString("dd/MM/yyyy")
                </td>

                <td class="text-right">
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
                    <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-alt"></span></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
                </td>
            </tr>
        }
    </tbody>
</table>

